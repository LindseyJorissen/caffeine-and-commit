BoxLayout:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0.6, 0.3, 0, 1  # Dark orange background
        Rectangle:
            pos: self.pos
            size: self.size

    TextInput:
        id: result
        font_size: 32
        readonly: True
        halign: 'right'
        multiline: False
        background_color: (0.4, 0.2, 0, 1)  # Darker orange for input field
        foreground_color: (1, 1, 1, 1)  # White text color

    GridLayout:
        cols: 4
        size_hint_y: 0.6

        Button:
            text: "7"
            background_color: (0.5, 0.25, 0, 1)
            color: (1, 1, 1, 1)
            on_press: app.on_button_press(self)

        Button:
            text: "8"
            background_color: (0.5, 0.25, 0, 1)
            color: (1, 1, 1, 1)
            on_press: app.on_button_press(self)

        Button:
            text: "9"
            background_color: (0.5, 0.25, 0, 1)
            color: (1, 1, 1, 1)
            on_press: app.on_button_press(self)

        Button:
            text: "/"
            background_color: (1, 0.5, 0, 1)  # Orange for operators
            color: (1, 1, 1, 1)
            on_press: app.on_button_press(self)

        Button:
            text: "4"
            background_color: (0.5, 0.25, 0, 1)
            color: (1, 1, 1, 1)
            on_press: app.on_button_press(self)

        Button:
            text: "5"
